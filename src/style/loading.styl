.loadScreen
  position absolute
  z-index 2
  top 0
  width 100%
  height 100%
  background-color #ffe387
  display flex
  flex-direction column
  justify-content center
  align-items center
  transition 0.55s opacity ease-out

.load
  margin 0 0 30px 0
  padding 0
  color #5c350e
  font-family Montserrat
  user-select none

.loadScreen-fade 
  opacity 0
.progressBar
  border-radius 8px
  width 300px
  background-color #fff

.progress
  border-radius 8px
  width 0px
  height 7px
  background-color #5c350e
  transition 0.32s ease-out width

.waitScreen
  position absolute
  z-index 1
  top 0
  width 100%
  height 100%
  background-color #ffe387
  display flex
  flex-direction column
  justify-content center
  align-items center
  transition 0.55s opacity ease-out

.wait-text
  margin 0 0 30px 0
  padding 0
  color #5c350e
  font-family Montserrat
  user-select none
  cursor pointer

.waitScreen-fade 
  opacity 0